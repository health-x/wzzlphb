.UCenter-bg {
    align-items: center;
    background-image: url(https://api.cxkf.cc/wxxcx/kh/wangzhe/img/bj.gif);
    background-size: cover;
    border-radius: 20rpx;
    color: #fff;
    display: flex;
    flex-direction: column;
    font-weight: 300;
    height: 375rpx;
    justify-content: center;
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top: 40rpx;
    overflow: hidden;
    padding-top: 40rpx;
    position: relative;
    text-shadow: 0 0 3px rgba(0, 0, 0, .3);
}

.UCenter-bg .author {
    opacity: .8;
}

.UCenter-bg .png {
    width: 200rpx;
    height: 200rpx;
}

.UCenter-bg .gif-wave {
    bottom: 0;
    height: 100rpx;
    left: 0;
    mix-blend-mode: screen;
    position: absolute;
    width: 100%;
    z-index: 99;
}


.hai {
    font-size: 22rpx;
    color: #DC143C;
}

.size {
    font-size: 25rpx;
}


.avatar-wrapper {
    padding: 0;
    width: 56px !important;
    border-radius: 8px;
    margin-top: 40px;
    margin-bottom: 40px;
}

.avatar {
    display: block;
    width: 56px;
    height: 56px;
}

.container {
    display: flex;
}